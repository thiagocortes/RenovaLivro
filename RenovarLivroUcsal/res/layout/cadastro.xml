<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F0F0F0"
    tools:context=".Cadastro" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/topo_marca"       
        android:text="@string/hello_world"
        android:textColor="#000000"
        android:textSize="25dp"
        android:gravity="left"
        android:fontFamily="BBAlpha Sans"
    />

	<LinearLayout
	    android:layout_width="250dp"
	    android:layout_height="282dp"
	    android:layout_gravity="center"
	    android:layout_marginTop="20dp"
	    android:background="#E3DFD4"
	    android:orientation="vertical"
	    android:paddingBottom="@dimen/activity_vertical_margin"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:paddingTop="@dimen/activity_vertical_margin" >

		<TextView
		    android:id="@+id/titulo_cadastro"
		    android:layout_width="fill_parent"
		    android:gravity="center"
		    android:layout_height="wrap_content"
		    android:text="Cadastro de Livros"
		    android:textAppearance="?android:attr/textAppearanceLarge" />

	    <EditText 
	        android:id="@+id/et_titulo"
	        android:layout_marginTop="10dp"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:inputType="text"
	        android:background="@drawable/styles_edit_text"
	        android:hint="Titulo"
        />

    	<EditText 
	        android:id="@+id/et_autor"
	        android:layout_marginTop="10dp"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:background="@drawable/styles_edit_text"
	        android:inputType="text"
	        android:hint="Autor"
        />
    	<EditText 
	        android:id="@+id/et_isdn"
	        android:layout_marginTop="10dp"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:background="@drawable/styles_edit_text"
	        android:inputType="number"
	        android:hint="ISDN"
        />
    
    	<Button 
	        android:id="@+id/bt_cadastrar"        
	        android:layout_width="fill_parent"
	        android:layout_height="30dp"
	        android:layout_marginTop="10dp"	        
	        android:background="@drawable/shape_buttom"
	        android:textAlignment="center"   
	        android:textSize="22dp"	
	        android:onClick="inserir"        
	        android:textColor="#FFFFFF"
	        android:fontFamily="Segoe UI"
	        android:text="Cadastrar"
        />
	    </LinearLayout>

	<Spinner
	    android:id="@+id/spinner1"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@drawable/ic_launcher" />

</LinearLayout>
